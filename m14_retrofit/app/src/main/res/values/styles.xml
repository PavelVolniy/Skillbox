<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NameStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="TextDescriptions">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/default_padding</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">@dimen/horizontal_padding_textView</item>
    </style>

    <style name="TextDescriptions.LeftColumn" parent="TextDescriptions">
        <item name="android:gravity">left</item>
    </style>

    <style name="TextDescriptions.RightColumn" parent="TextDescriptions">
        <item name="android:gravity">left</item>
    </style>

</resources>